@model TemperatureConverter

@{
    ViewData["Title"] = "Ejercicio 4.1.3";
}

<div class="text-center">
    <form method="post">
        <div style="color:red">@Html.ValidationMessage("Temperature")</div>
        <select name="conv" size="1">
            <option selected="selected" value="c">Grados centígrados a Fahrenheit</option>
            <option value="f">Fahrenheit a grados centígrados</option>
        </select>
        <input name="temperature" />
        <input type="submit" value="Convertir" />
    </form>


    @if (Model != null)
    {
        <br />
        if (Model.CelsiusToFahrenheit)
        {
            <h2>@Model.Celsius grados centígrados = @Model.Fahrenheit grados Fahrenheit</h2>
        }
        else
        {
            <h2>@Model.Fahrenheit grados Fahrenheit = @Model.Celsius grados centígrados</h2>
        }
    }
</div>




