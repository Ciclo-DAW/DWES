@model IEnumerable<Concesionario_UD6.Models.Ubicacion>

@{
    ViewData["Title"] = "Ubicacións";
}

<h3>Ubicacións</h3>
<p>
    <a asp-action="Create"><i class="fas fa-plus-circle"></i> Engadir Ubicación</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i> Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i> Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
