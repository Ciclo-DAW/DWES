@model Concesionario_UD6.Models.Concesionario

@{
    ViewData["Title"] = "Eliminar concesionario";
}


<h4>Eliminar concesionario</h4>
<hr/>
<div>
    <a asp-action="Index"> <i class="fas fa-chevron-left"></i> Voltar</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
    </dl>
    <h4>Estás seguro en querer borrar o concesionario?</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
    </form>
</div>
