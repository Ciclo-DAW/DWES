@model IEnumerable<JuguetylandiaWeb.Models.Juguete>

@{
    ViewData["Title"] = "Inventario";
}

<h1>Inventario</h1>

<p>
    <a asp-action="Create" class="btn btn-success addButton"> 
        <i class="fas fa-plus-circle"></i>    Alta de juguete
    </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Ref.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PVP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oferta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                Cant.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tienda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Referencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PVP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oferta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tienda.Codigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning editButton">
                    <i class="fas fa-edit"></i>  
                </a> 
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">
                    <i class="fas fa-list-alt" title="Detalle">  </i>
                </a>  
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
                    <i class="fas fa-trash-alt" title="Eliminar"> </i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
