@model JuguetylandiaWeb.Models.Juguete

@{
    ViewData["Title"] = "Alta de juguete";
}


<h4>Alta de juguete</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-7">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4 offset-1">
                    <label asp-for="Ean" class="control-label"></label>
                    <input asp-for="Ean" class="form-control" />
                    <span asp-validation-for="Ean" class="text-danger"></span>
                </div>
              
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Referencia" class="control-label"></label>
                    <input asp-for="Referencia" class="form-control" />
                    <span asp-validation-for="Referencia" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 offset-1">
                    <label asp-for="PVP" class="control-label"></label>
                    <input asp-for="PVP" class="form-control" />
                    <span asp-validation-for="PVP" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 offset-1">
                    <label asp-for="Oferta" class="control-label"></label>
                    <input asp-for="Oferta" class="form-control" />
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Marca" class="control-label"></label>
                        <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
                    </div>
                    <div class="form-group col-md-4 offset-1">
                        <label asp-for="Tipo" class="control-label"></label>
                        <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<Tipo>()"></select>
                    </div>
                    <div class="form-group col-md-2 offset-1">
                        <label asp-for="Edad" class="control-label"></label>
                        <select asp-for="Edad" class="form-control" asp-items="Html.GetEnumSelectList<Edad>()"></select>
                    </div>
                </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3 offset-1">
                    <label asp-for="FechaRecepcion" class="control-label"></label>
                    <input asp-for="FechaRecepcion" class="form-control" />
                    <span asp-validation-for="FechaRecepcion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4 offset-2">
                    <label asp-for="Tienda" class="control-label"></label>
                    <select asp-for="TiendaId" class="form-control" asp-items="ViewBag.TiendaId"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="FechaGarantia" class="control-label"></label>
                    <input asp-for="FechaGarantia" class="form-control" />
                    <span asp-validation-for="FechaGarantia" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8 offset-1">
                    <label asp-for="InfoGarantia" class="control-label"></label>
                    <input asp-for="InfoGarantia" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-undo-alt"></i> Volver
                </a>
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
